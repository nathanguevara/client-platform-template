---
import '../styles/global.css';
---
<main class="min-h-screen bg-gray-50 flex flex-col items-center justify-center px-4 py-12">
  <div class="w-full max-w-xl bg-white rounded-xl shadow p-8">
    <h1 class="text-3xl font-extrabold text-blue-700 mb-6 text-center">Contact Us</h1>
    <form class="space-y-5">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1" for="name">Name</label>
        <input
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none"
          type="text"
          id="name"
          name="name"
          required
        />
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1" for="email">Email</label>
        <input
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none"
          type="email"
          id="email"
          name="email"
          required
        />
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1" for="message">Message</label>
        <textarea
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none"
          id="message"
          name="message"
          rows="5"
          required
        ></textarea>
      </div>
      <button
        type="submit"
        class="w-full py-2 px-4 bg-blue-600 text-white font-semibold rounded-lg shadow hover:bg-blue-700 transition"
      >
        Send Message
      </button>
    </form>
    <div class="mt-8 text-center text-gray-500 text-sm">
      <p>Or email us at <a href="mailto:hello@example.com" class="text-blue-600 hover:underline">hello@example.com</a></p>
    </div>
  </div>
</main>